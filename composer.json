{
    "name": "oire/iridium",
    "description": "Iridium, a security library for hashing passwords, encrypting data and managing secure tokens.",
    "type": "library",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Oire/php-code-style"
        }
    ],
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "*",
        "oire/php-code-style": "dev-master",
        "phpunit/phpunit": "*",
        "psalm/plugin-phpunit": "*",
        "vimeo/psalm": "dev-master"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "André Polykanine also known as Menelion Elensúlë",
            "email": "ap@oire.me",
            "homepage": "https://github.com/Menelion",
            "role": "developer"
        }
    ],
    "support": {
        "issues":   "https://github.com/Oire/Iridium-php/issues",
        "source":   "https://github.com/Oire/Iridium-php"
    },
    "autoload": {
        "psr-4": {
            "Oire\\Iridium\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Oire\\Iridium\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "funding": [
        {
            "type": "PayPal",
            "url": "https://paypal.me/MenelionFr"
        },
        {
            "type": "Ko-fi",
            "url": "https://ko-fi/Menelion"
        }
    ]
}
